$group

    ${'$'}include set-ctx-functions
    ${'$'}
        setCtxDevDep ('typescript', '^5.5.4');
        setCtxDevDep ('@types/node', '^22.0.0');

    { compilerOptions
        outDir "./build"
        allowJs true
        target "ES2018"
        noImplicitAny true
        noImplicitThis true
        strictNullChecks true
        moduleResolution "node"
        allowSyntheticDefaultImports true
    [ include
        "src/**/*.ts" 
    [ exclude
        "node_modules" 