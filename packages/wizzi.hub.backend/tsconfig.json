{
    "compilerOptions": {
        "target": "es2022",
        "lib": [
            "es2023"
        ],
        "jsx": "react",
        "module": "node16",
        "moduleResolution": "node16",
        "paths": {
            "#*": [
                "./*"
            ]
        },
        "sourceMap": true,
        "outDir": "./dist",
        "sourceRoot": "src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}