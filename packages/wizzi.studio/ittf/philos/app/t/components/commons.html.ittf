$group

    function DetailBar
        param props
        var {title, id, showFullBar, onClick} = props
        return
            div 
                @ className "bar"
                {
                    &&
                        + showFullBar
                        div
                            @ className "bar-arrow-left"
                            @ onClick {onClick}
                            img
                                @ src {'${wzCtx.assetsURL}/img/arrow-left.png'}
                                @ className "bar-arrow-left-img"
                {
                    &&
                        + showFullBar
                        div
                            @ className "bar-title"
                            + {title}
                div id: {id}
                    @ className "bar-id"
                div 
                    @ className "li-clear"
